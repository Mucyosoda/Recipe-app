<br />
<h1>List of foods</h1>
<%= link_to 'Add Food', new_food_path, class:"btn btn-secondary float-right" %>
<br />

<% if @foods.empty? %>
<p>User has no foods yet</p>
<% else %>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-info mb-3 text-center">
    <tr>
      <th>NAME type</th>
      <th>MEASUREMENT_UNIT</th>
      <th>PRICE</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= button_to 'Delete', food_path(food), method: :delete, class:"btn btn-danger" %></td>

    </tr>
    <% end %>
  </tbody>
</table>
<% end %>
