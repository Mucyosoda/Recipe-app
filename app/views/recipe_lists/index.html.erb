<p style="color: green"><%= notice %></p>

<h1>Recipe lists</h1>
<%= link_to "New recipe", new_recipe_list_path, class:"btn btn-success" %>

<div id="recipe_lists">
<br>
<% @recipe_lists.each do |recipe_list| %>
  <div class="card text-white border-secondary bg-info mb-3" style="max-width: 48rem;">
          <div class="card-body">
        
              <h2 class="card-title"><%= recipe_list.name %></h5>
              <p class="card-text"> <%= recipe_list.description %></p>
              <%= link_to "Delete", recipe_list, method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-secondary" %>
          </div>
        </div>
      <% end %>
</div>