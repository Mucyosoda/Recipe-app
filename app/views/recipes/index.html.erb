
<br />
<h1>List of Recipes</h1>    
 <%= link_to 'Add Recipe', new_recipe_path(@recipe), class:"btn btn-secondary" %>

<div id="recipes">
<br>
<% @recipes.each do |recipe| %>
  <div class="card text-white border-secondary bg-info mb-1" style="max-width: 48rem;">
          <div class="card-body row">
        
             <div class="col-4"> <h2 class="card-title"><%= recipe.name %></h2>
             <br />
             <%= button_to "Delete", recipe_path(recipe), method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-secondary" %>
          
             </div>
              <div class="col-8"><p class="card-text"> <%= recipe.description %></p></div>
              </div>
        </div>
      <% end %>
</div>