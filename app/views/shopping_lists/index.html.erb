 

    <h1 >Shopping list</h1> 


<table class="table table-striped table-bordered table-hover">
  <thead class="table-info mb-3 text-center">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>PRICE</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @list.each do |recipe_food| %>
    <tr>
      <td><%= recipe_food.name %></td>
      <td><%= recipe_food.measurement_unit %></td>
      <td><%= recipe_food.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>