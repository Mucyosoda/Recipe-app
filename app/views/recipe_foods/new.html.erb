<div>
  <div >
  <br />
    
      <br />
    <div>
      <%=form_with url: recipe_recipe_foods_path, scope: :recipe_food do |f| %>
        <div>
          <div class="form-group">
          <label >Select an: </label>
            <%= f.select :food_id, @foods.collect { |food| [food.name, food.id] }, :prompt => 'Ingredient', required: true, class:"form-select" %>
          </div>
          <div class="form-group">
            <%= f.label :quantity, 'Quantity:' %>
            <%= f.number_field :quantity, step: :any, required: true, class:"form-control" %>
          </div>
        </div>
        <div>
          <%= f.submit "Add Ingredient", class:"btn btn-secondary" %> ||
          <%= link_to 'back', recipe_path(params[:recipe_id]), class:"btn btn-dark" %>
        </div> 
      <% end %>
    </div>
  </div>
</div>